    "version": "0.2.0",
    "configurations": [
        {
            "name": "firebase_stacked",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file",
                "config.staging.json"
            ]
        },
        {
            "name": "firebase_stacked (profile mode)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "firebase_stacked (release mode)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release",
            "args": [
                "--dart-define-from-file",
                "config.prod.json"
            ]
        }
    ]
}